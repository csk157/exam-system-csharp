<Window x:Class="Desktop.CreateEditExam"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CreateEditExam" Height="178" Width="300" Closed="ClosedWindow">
    <StackPanel Margin="5">
        <Label Content="Title"/>
        <TextBox Height="23" TextWrapping="Wrap" Text="{Binding Path=Title, ValidatesOnDataErrors=True}"/>
        <Label Content="Education"/>
        <ComboBox SelectedValue="{Binding Path=Education}" Name="Educations"/>
        <StackPanel HorizontalAlignment="Right" Orientation="Horizontal" Margin="0,10,0,0">
            <Button Content="Save" Click="Save"/>
            <Button Content="Cancel" Margin="5,0,0,0" Click="Cancel"/>
        </StackPanel>
    </StackPanel>
</Window>
